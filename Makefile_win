# 定义变量
CXX := g++
CXXFLAGS := -std=c++17 -g
LDFLAGS := lib/curses.a -static-libgcc -static-libstdc++ -mconsole  # 使用静态链接以兼容 Windows
SRC_DIR := src
OUT_DIR := out
TARGET := $(OUT_DIR)\\main.exe
DATA_FILE := data\\1

# 手动列出所有 .cpp 文件
SRCS := \
	src\\base\\Library.cpp \
	src\\base\\LogSystem.cpp \
	src\\base\\main.cpp \
	src\\base\\ThreadPool.cpp \
	src\\base\\UI.cpp \
	src\\user\\MyScene.cpp 

# 手动列出所有 .o 文件
OBJS := \
	out\\base\\Library.o \
	out\\base\\LogSystem.o \
	out\\base\\main.o \
	out\\base\\ThreadPool.o \
	out\\base\\UI.o \
	out\\user\\MyScene.o 

# 默认目标
all: $(TARGET)

# 链接目标
$(TARGET): $(OBJS)
	$(CXX) $(OBJS) $(LDFLAGS) -o $@

# 编译每个 .cpp 文件，并将 .o 文件输出到 out 目录
$(OUT_DIR)\\%.o: $(SRC_DIR)\\%.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@


# 伪目标
.PHONY: all 
