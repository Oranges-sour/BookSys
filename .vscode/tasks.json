{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang build src",
            "command": "make",
            "args": [
                "-f Makefile_mac",
                "all",
                
                "-j"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
